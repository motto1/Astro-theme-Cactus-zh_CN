---
import { generateToc } from "@/utils/generateToc";
import type { MarkdownHeading } from "astro";
import TOCHeading from "./TOCHeading.astro";

interface Props {
	headings: MarkdownHeading[];
}

const { headings } = Astro.props;

const toc = generateToc(headings);
---

<aside class="sticky top-20 order-2 -me-32 hidden basis-64 lg:block">
	<!-- 优化：目录 -->
	<div class="glass-morphism rounded-xl p-4 smooth-transition">
		<h2 class="title text-lg flex items-center gap-2">
			<span>目录</span>
			<span class="text-xs bg-gradient-to-r from-blue-500 to-purple-500 text-white px-2 py-1 rounded-full">TOC</span>
		</h2>
		<ul class="mt-4 text-xs space-y-2">
			{toc.map((heading) => <TOCHeading heading={heading} />)}
		</ul>
	</div>
</aside>
